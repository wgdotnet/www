---
import { i18n } from './Hero.i18n';
import { getLanguage } from "./Language";

const language: string = getLanguage(Astro.request.headers);
---
<div class="relative isolate overflow-hidden pt-14">
    <img
      class="absolute inset-0 -z-10 h-full w-full object-cover"
      src="https://images.unsplash.com/photo-1519197924294-4ba991a11128?ixlib=rb-4.0.3&amp;auto=format&fit=crop&w=2371&q=80&amp;sat=-0&amp;exp=-15&amp;"
      alt="warsaw panorama"
    />
    <div
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      aria-hidden="true"
    >
    </div>
    <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
          {`${i18n[language].headline}`}
        </h1>
        <p class="mt-6 text-lg leading-8 bg-gray-800/50 text-gray-300 rounded-full ring-2 ring-white/10 hover:ring-white/20">
          {`${i18n[language].subHeadline}`}
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400"
            href="https://www.meetup.com/WG-NET/"
            target="_blank">Meetup</a>
        </div>
      </div>
    </div>
    </div>
</div>
