---
import { i18n } from './LogoCloud.i18n';

const language: string = Astro.request.headers.get('accept-language')?.startsWith('pl') ? 'pl' : 'en';
---
<div class="bg-gray-900 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-none">
        <h2 class="text-lg font-semibold leading-8 text-white">{i18n[language].supportedBy}</h2>
        <div class="mx-auto mt-10 grid grid-cols-4 items-start gap-x-8 gap-y-10 sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:grid-cols-5">
          <a href="https://jobs.7n.com/" target="_blank">
            <img class="col-span-2 max-h-12 w-full object-contain object-left lg:col-span-1" src="/7n.svg" alt="7N" width="50" height="50">
          </a>
          <a href="https://dotnetfoundation.org/" target="_blank">
            <img class="col-span-2 max-h-12 w-full object-contain object-left lg:col-span-1" src="/netfoundation_50x50.svg" alt=".NET Foundation" width="50" height="50">
          </a>
        </div>
      </div>
    </div>
  </div>